// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Order {
  id       String   @id @default(uuid())
  user_id  String 
  product  String
  quantity Int
  status   String
  total    Float
  notes    String
  date     DateTime @default(now())
}